{
    "private": true,
    "name": "@maclary/plugins",
    "version": "0.0.0",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "yarn workspaces foreach run lint",
        "format": "yarn workspaces foreach run format",
        "clean": "yarn workspaces foreach run clean",
        "build": "yarn workspaces foreach run build",
        "prepare": "husky install .github/husky"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@sapphire/eslint-config": "^4.3.4",
        "@types/node": "^17.0.25",
        "discord.js": "^14.0.0-dev.1650672498-3617093",
        "eslint": "^8.14.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.4.0",
        "maclary": "^0.2.0",
        "prettier": "^2.6.2",
        "pretty-quick": "^3.1.3",
        "typescript": "^4.6.3"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types"
                ]
            ]
        }
    },
    "lint-staged": {
        "src/*.ts": "eslint src --fix"
    }
}
